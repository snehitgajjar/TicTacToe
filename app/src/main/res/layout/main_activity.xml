<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="3"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/score"
        android:text="0 - 0"
        android:gravity="center"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"/>

    <Button android:text=""
        android:id="@+id/button_one"
        android:onClick="onBtnOneClicked"> </Button>

    <Button android:text=""
        android:id="@+id/button_two"
        android:onClick="onBtnTwoClicked"></Button>

    <Button android:text=""
        android:id="@+id/button_three"
        android:onClick="onBtnThreeClicked"></Button>

    <Button android:text=""
        android:id="@+id/button_four"
        android:onClick="onBtnFourClicked"></Button>

    <Button android:text=""
        android:id="@+id/button_five"
        android:onClick="onBtnFiveClicked"></Button>

    <Button android:text=""
        android:id="@+id/button_six"
        android:onClick="onBtnSixClicked"></Button>

    <Button android:text=""
        android:id="@+id/button_seven"
        android:onClick="onBtnSevenClicked"></Button>

    <Button android:text=""
        android:id="@+id/button_eight"
        android:onClick="onBtnEightClicked"></Button>

    <Button android:text=""
        android:id="@+id/button_nine"
        android:onClick="onBtnNineClicked"></Button>

    <Button android:text="New Game"
        android:id="@+id/newGame"
        android:onClick="resetGame"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"></Button>


</GridLayout>

